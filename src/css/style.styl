html
    font-size 62.5%

body
    font-size 1.6rem

html, body
    margin 0
    padding 0
    font-family monospace

main
    max-width 100vw
    box-sizing border-box

table
    border-collapse collapse
    margin-right 2rem

td
    border 0.1rem solid black
    padding 0.5rem

    &:first-child
        font-weight 500

canvas
    image-rendering pixelated

canvas#canvas
    display none

input
    margin 1rem

.row
    margin 2rem
    display flex
    flex-flow row nowrap
    justify-content center
    align-items flex-start